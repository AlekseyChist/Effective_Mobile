<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your app theme here. -->
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.App.Title1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="TextAppearance.App.Title2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="TextAppearance.App.Title3" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="TextAppearance.App.Title4" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="TextAppearance.App.Button1" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="TextAppearance.App.Button2" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="TextAppearance.App.Tab" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="TextAppearance.App.Number" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">7sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <!-- Button Styles -->

    <style name="Button.FieldBlue.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button1</item>
    </style>

    <style name="Button.FieldGreen.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">296dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button1</item>
    </style>

    <style name="Button.FieldBlueShort.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">167dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button1</item>
    </style>

    <style name="Button.SmallFilter" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">16dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="backgroundTint">@color/basic_grey_2</item>
    </style>

</resources>